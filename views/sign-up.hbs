<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Cinema Booking</title>
  <link rel="icon" type="image/x-icon" href="favicon.ico">
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <script src="js/jquery-3.7.1.min.js"></script>
</head>
<body>
<div class="container pt-2 pt-md-5">
  <h1>Sign Up</h1>
  <p></p>

  <form id="formSignUp" class="card">
    <div class="card-body">
      <div class="form-group">
        <label for="inputEmail">Email Address</label>
        <input id="inputEmail" type="email" class="form-control" autofocus required>
      </div>
      <div class="form-group">
        <label for="inputPassword">Password</label>
        <input id="inputPassword" type="password" class="form-control" required>
      </div>
      <hr>
      <div class="text-right">
        <a href="/" class="ml-3">Back to Sign In</a>
        <button type="submit" class="btn btn-primary ml-3">Sign Up</button>
      </div>
    </div>
  </form>
</div>

<script>
  document.getElementById('formSignUp').onsubmit = async function(e) {
    e.preventDefault();

    const res = await fetch('/user/register', {
      method: 'POST',
      cache: 'no-cache',
      credentials: 'same-origin',
      headers: {
        'Content-Type': 'application/json',
      },
      redirect: 'manual',
      body: JSON.stringify({
        email: document.getElementById('inputEmail').value,
        password: document.getElementById('inputPassword').value,
      }),
    });

    if (res.ok) {
      alert('Succeeded to sign-up');

      location.href = '/';
    } else {
      alert('Failed to sign-up');
    }
  };
</script>
</body>
</html>
